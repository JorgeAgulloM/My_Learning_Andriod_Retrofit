<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_Clear">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemBand_TV_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="NOMBRE"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/itemBand_Image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemBand_Image"
        android:layout_width="345dp"
        android:layout_height="198dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemBand_TV_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemBand_TV_descrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="DESCRIPCIÃ“N"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/itemBand_Image"
        app:layout_constraintStart_toStartOf="@+id/itemBand_Image"
        app:layout_constraintTop_toBottomOf="@+id/itemBand_Image" />

</androidx.constraintlayout.widget.ConstraintLayout>